<Window x:Class="KinectTest.ControlCenterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ControlCenterWindow" Height="300" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,25,0,0" TextWrapping="Wrap" Text="Select your side detection mode :" VerticalAlignment="Top"/>
        <RadioButton GroupName="ModeSelection" Content="Auto" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.729,0.933" Name="radioAuto" Checked="radioAuto_Checked"/>
        <RadioButton GroupName="ModeSelection" Content="Manual" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Name="radioManual" Checked="radioManual_Checked"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,90,0,0" TextWrapping="Wrap" Text="Select the side to track :" VerticalAlignment="Top" Name="sideSelection" Visibility="Hidden"/>
        <RadioButton GroupName="SideSelection" Content="Right" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" Name="radioRight" Checked="radioRight_Checked" Visibility="Hidden"/>
        <RadioButton GroupName="SideSelection" Content="Left" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.153,-0.8" Name="radioLeft" Checked="radioLeft_Checked" Visibility="Hidden"/>
    </Grid>
</Window>
